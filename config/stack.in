################################################################################
# Stack - Three thin layers on top of each other.
# Lengths are in cm; mua and mus are in 1/cm.
################################################################################


general
{
	photons = 20
	voxel_size = 0.1
	
	log = 0
	deterministic = 1
}

source
{
	position = 0.05, 0.2, 0.05
	direction = 0, -1, 0
}

layer
{
	eta = 1.37
	mua = 0.1
	mus = 20
	ani = 0.5
	
	# vertices - Layer 0: Y from 0.0 to -0.1
	vertex = -1.0,  0.0,  1.0	# left-top-front
	vertex =  1.0,  0.0,  1.0	# right-top-front
	vertex =  1.0, -0.1,  1.0	# right-bottom-front
